# Phytium PhytiumPi
BOARD_NAME="Phytium Pi"
BOARDFAMILY="phytium"
BOARD_MAINTAINER=""
KERNEL_TARGET="legacy"
BOOT_FDT_FILE="phytium/phytiumpi_firefly.dtb"
SRC_CMDLINE=""

function post_family_tweaks__phytiumpi() {
    display_alert "Applying bt blobs"
    cp -v "$SRC/packages/blobs/phytium/rtlbt/systemd-hciattach.service" "$SDCARD/etc/systemd/system/systemd-hciattach.service"
    cp -v "$SRC/packages/blobs/phytium/rtlbt/rtk_hciattach" "$SDCARD/usr/bin/rtk_hciattach"
    cp -v "$SRC/packages/blobs/phytium/rtlbt/rtl8821c_config" "$SDCARD/lib/firmware/rtlbt/rtl8821c_config"
    cp -v "$SRC/packages/blobs/phytium/rtlbt/rtl8821c_fw" "$SDCARD/lib/firmware/rtlbt/rtl8821c_fw"
}
